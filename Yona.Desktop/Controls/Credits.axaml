<UserControl
    x:Class="Yona.Desktop.Controls.Credits"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="using:Yona.Desktop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="using:Markdown.Avalonia"
    xmlns:suki="using:SukiUI.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <cc:Page Title="About">
        <suki:GlassCard>
            <md:MarkdownScrollViewer Source="avares://Yona/Assets/credits.md">
                <md:MarkdownScrollViewer.Styles>
                    <StyleInclude Source="/Styles/MarkdownStyles.axaml" />
                </md:MarkdownScrollViewer.Styles>
            </md:MarkdownScrollViewer>
        </suki:GlassCard>
    </cc:Page>
</UserControl>
